<style>
    .inner-container {
        height: 100%;
        overflow: hidden;
        width: 100%;
        display: flex;
        flex-direction: column;
    }
    .table-header {
        position: relative;
        top:0 !important;
    }
    .table-body {
        overflow: auto;
        flex: 5;
    }
    .margin-auto{
        margin: auto !important;
    }
    .border-less tr td,.border-less { border: 0px !important; }
    .ui.supercompact.icon.button, .ui.supercompact.icon.buttons .button {
        padding: .3em .3em .3em .3em !important;
    }
</style>
<div class="inner-container gui fluid container" style="padding:0%;">
    <div class="table-header">
        <table id="headertable" class="gui basic large compact sortable fixed single line table">
            {{#if caption}}
                <caption class="gui gui-subheading-2 m-0 p-0 text-left">{{caption}}</caption>
            {{/if}}
            <colgroup class="headerColGroup">
                <col style="width:40px;" />
                <col style="width:40px;" />
                {{#each columns}}
                    {{{Column this}}}
                {{/each}}
            </colgroup>
            <thead>
                <tr>
                    <th></th>
                    <th><input type="checkbox" class="select-all-checkbox cursor-pointer"></th>
                    {{#each columns}}
                        <th class="gui cursor-pointer" id="header-{{id}}" data-header-id="{{id}}">
                            <span class="gui sub header">{{name}}</span>
                            {{#if sortable}}
                                {{{Ordered order}}}
                            {{/if}}
                        </th>
                    {{/each}}
                </tr>
            </thead>
        </table>
    </div>
    <div class="table-body">
        <table class="gui basic large compact fixed selectable single line table mainTable">
            <colgroup class="bodyColGroup">
                <col style="width:40px;" /> 
                <col style="width:40px;" />
                {{#each columns}}
                    {{{Column this}}}
                {{/each}}
            </colgroup>
            <tbody class="mainTableBody">
                {{> grid-main-row}}
            </tbody>
        </table>
    </div>
    <div class="table-footer gui h-auto fluid-w flex jc-sb p-5 m-0">
           {{> grid-footer}}
    </div>
</div>