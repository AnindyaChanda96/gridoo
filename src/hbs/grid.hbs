<style>
    .inner-container {
        height: 100%;
        overflow: hidden;
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    .table-header {
        position: relative;
        top:0 !important;
    }

    .table-body {
        overflow: auto;
        flex: 5;
    }
    .table-footer{
        height: 35px;
        padding: 5px;
    }
    .table-footer .footer-middle{
        display: flex;
    }
    .table-footer .footer-right{
        display: flex;
    }
    .margin-auto{
        margin: auto !important;
    }
    .remove-label:hover{
        text-decoration: line-through;
        cursor: pointer;
    }
    .border-less tr td,.border-less { border: 0px !important; }
    .cursor-pointer{
        cursor: pointer;
    }
    .ui.supercompact.icon.button, .ui.supercompact.icon.buttons .button {
        padding: .3em .3em .3em .3em !important;
    }
</style>
<div class="inner-container gui fluid container" style="padding:0%;">
    <div class="table-header">
        <table id="headertable" class="gui basic large compact sortable fixed single line table">
            <colgroup class="headerColGroup">
                <col style="width:40px;" />
                <col style="width:40px;" />
                {{#each columns}}
                    {{{Column this}}}
                {{/each}}
            </colgroup>
            <thead>
                <tr>
                    <th tabindex="-1"></th>
                    <th tabindex="0">
                        <input type="checkbox" class="select-all-checkbox cursor-pointer">
                    </th>
                    {{#each columns}}
                        {{#if sortable}}
                            <th class="gui cursor-pointer" tabindex="0" id="header-{{id}}" data-header-id="{{id}}">
                                <span class="gui sub header">{{name}}</span>
                                {{{Ordered order}}}
                            </th>
                        {{else}}
                            <th class="gui cursor-pointer" tabindex="-1" id="header-{{id}}" data-header-id="{{id}}">
                                <span class="gui sub header">{{name}}</span>
                            </th>
                        {{/if}}
                    {{/each}}
                </tr>
            </thead>
        </table>
    </div>
    <div class="table-body">
        <table class="gui basic large compact fixed selectable single line table mainTable">
            <colgroup class="bodyColGroup">
                <col style="width:40px;" /> 
                <col style="width:40px;" />
                {{#each columns}}
                    {{{Column this}}}
                {{/each}}
            </colgroup>
            <tbody class="mainTableBody">
                {{> grid-main-row}}
            </tbody>
        </table>
    </div>
    <div class="table-footer gui h-auto fluid-w basic curved row p-5 m-0">
           {{> grid-footer}}
    </div>
</div>