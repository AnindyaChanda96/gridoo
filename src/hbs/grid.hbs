<div class="inner-container gui fluid container" style="padding:0%;">
    <div class="table-header">
        <table id="headertable" class="gui basic tablet stackable large compact sortable fixed single line table">
            {{#if caption}}
                <caption class="gui gui-subheading-2 m-0 p-0 text-left">{{caption}}</caption>
            {{/if}}
            <colgroup class="headerColGroup">
                <col style="width:40px;" />
                <col style="width:40px;" />
                {{#each columns}}
                    {{{Column this}}}
                {{/each}}
            </colgroup>
            <thead>
                <tr>
                    <th></th>
                    <th aria-label="Select All Checkbox" id="select-all-checkbox">
                        <input  type="checkbox" 
                                aria-labelledby="select-all-checkbox"
                                class="select-all-checkbox cursor-pointer">
                    </th>
                    {{#each columns}}
                        {{#if sortable}}
                            {{{Ordered this}}}
                        {{else}}
                        <th aria-label="{{name}}" 
                            aria-sort="none" 
                            title="{{name}}" 
                            class="gui" 
                            id="header-{{id}}" 
                            data-header-id="{{id}}">
                            <span class="gui sub header">{{name}}</span>
                        </th>
                        {{/if}}
                    {{/each}}
                </tr>
            </thead>
        </table>
    </div>
    <div class="table-body">
        <table role="grid" class="gui basic tablet stackable large compact fixed selectable single line table mainTable">
            <colgroup class="bodyColGroup">
                <col style="width:40px;" /> 
                <col style="width:40px;" />
                {{#each columns}}
                    {{{Column this}}}
                {{/each}}
            </colgroup>
            <tbody class="mainTableBody">
                {{> grid-main-row}}
            </tbody>
        </table>
    </div>
    <div role="pag" class="table-footer gui h-auto fluid-w flex jc-sb p-5 m-0">
           {{> grid-footer}}
    </div>
</div>