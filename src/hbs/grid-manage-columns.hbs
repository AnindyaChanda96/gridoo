<div class="gui of-hidden p-10 min-w-50 w-auto fluid-h" >
    <div class="col-settings-header" style="width: 100%">
        <div class="gui mini fluid icon input">
            <input class="col-settings-filter" type="text" placeholder="Search filter...">
            <i class="search icon"></i>
        </div>
        <div class="gui m-t-10">
            <a class="gui left show-all-column">Show All</a>
            <a class="gui right hide-all-column">Hide All</a>
        </div>
        <div class="gui clear"></div>
    </div>
    <div class="gui clear"></div>
    <div class="col-settings-table gui fluid h-95 of-auto p-5 m-t-10" >
        <table class="gui small very border-less selectable basic compact table">
            <tbody>
                {{#each columns}}
                <tr data-header-id="{{name}}">
                    <td class="gui cursor-pointer">
                        <label class="gui cursor-pointer">
                            <input type="checkbox" class="col-settings-hidden-checkbox gui m-r-10" value="{{id}}" {{Checked hidden}}>
                            {{name}}
                        </label>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>